<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- ✏️ Subtitle 1 -->
    <TextView
        android:id="@+id/muteChannelOption"
        android:layout_width="141dp"
        android:layout_height="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:text="@string/mute_channel"
        android:textAppearance="@style/mute_channel_option"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.7sp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/leaveChannelOption"
        android:layout_width="141dp"
        android:layout_height="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/muteChannelOption"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:text="@string/leave_channel"
        android:textAppearance="@style/leave_channel_option"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.7sp"
        android:gravity="top"
        />

</androidx.constraintlayout.widget.ConstraintLayout>